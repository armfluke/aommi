<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/promotionName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Promotion" />

            <ImageView
                android:id="@+id/promotionImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/promotionName"
                android:src="@mipmap/ic_launcher" />
            <TextView
                android:id="@+id/promotionDescription"
                android:layout_width="175dp"
                android:layout_height="75dp"
                android:layout_toRightOf="@id/promotionImage"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:text="Description"/>

            <TextView
                android:id="@+id/coin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/redeemButton"
                android:layout_marginRight="10dp"
                android:text="Coin: 100"/>

            <Button
                android:id="@+id/redeemButton"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="#71af33"
                android:clickable="true"
                android:text="Redeem" />
        </RelativeLayout>

    </android.support.v7.widget.CardView>
</RelativeLayout>